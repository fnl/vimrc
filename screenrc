startup_message off
# turn visual bell on
vbell on
# replace ctrl-A by ctrl-O
escape ^Gg
# set a big scrolling buffer
defscrollback 10000
# Set the caption on the bottom line
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= @%H - %LD %d %LM - %c"
# ensure screens start with 1, not 0
bind c screen 1
bind ^c screen 1
bind 0 select 10                                                            
screen 1
