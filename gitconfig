[push]
	default = simple
[user]
	name = Florian Leitner
[core]
	autocrlf = input
        excludesfile = ~/.gitignore_global
[branch]
	autosetuprebase = remote
[alias]
	graph = log --all --graph --decorate --abbrev-commit --format=format:'%C(bold blue)%h%C(reset) @ %ai by %C(bold green)%an%C(reset): %s %C(bold yellow)%d%C(reset)' #--simplify-by-decoration
	history = log --graph --pretty='format:%C(bold blue)%ci%C(reset) %h %C(bold green)%an%C(reset): %s %C(bold yellow)%d%C(reset)'
	lc = log-compact
[gitreview]
	remote = origin
	username = Florian Leitner
[pull]
	rebase = interactive
[credential "https://github.com"]
	helper = !/usr/local/bin/gh auth git-credential
[merge]
	tool = vimdiff
[diff]
	tool = difftastic
[pager]
        difftool = true
[difftool]
        prompt = false
[difftool "difftastic"]
        cmd = difft "$LOCAL" "$REMOTE"
[alias]
        difflog = "!f() { GIT_EXTERNAL_DIFF=difft git log -p --ext-diff $@; }; f"
[core]
	attributesfile = ~/.gitattributes_global
[filter "nbstrip"]
	clean = "jq --indent 1 \
		'(.cells[] | select(has(\"outputs\")) | .outputs) = []  \
		| (.cells[] | select(has(\"execution_count\")) | .execution_count) = null  \
		| .metadata = {\"language_info\": {\"name\": \"python\", \"pygments_lexer\": \"ipython3\"}} \
		| .cells[].metadata = {} \
		'"
	smudge = cat
	required = true
